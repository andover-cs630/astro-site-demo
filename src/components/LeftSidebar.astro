---
import { SIDEBAR } from "../config";

type Props = {
  currentPage: string;
};

const { currentPage } = Astro.props as Props;
const currentPageMatch = currentPage.endsWith("/")
  ? currentPage.slice(1, -1)
  : currentPage.slice(1);
---

<nav aria-labelledby="grid-left">
  <ul class="nav-groups">
    <h1>Website Overview</h1>
    {
      Object.entries(SIDEBAR).map(([header, children]) => (
        <li>
          <div class="nav-group">
            <h2>{header}</h2>
            <ul>
              {children.map((child) => {
                const url = Astro.site?.pathname + child.link;
                return (
                  <li class="nav-link">
                    <a
                      href={url}
                      aria-current={
                        currentPageMatch === child.link ? "page" : false
                      }
                    >
                      <p tabindex="0">{child.text}</p>
                    </a>
                  </li>
                );
              })}
            </ul>
          </div>
        </li>
      ))
    }
  </ul>
</nav>

<script is:inline>
  window.addEventListener("DOMContentLoaded", () => {
    var target = document.querySelector('[aria-current="page"]');
    if (target && target.offsetTop > window.innerHeight - 100) {
      document.querySelector(".nav-groups").scrollTop = target.offsetTop;
    }
  });
</script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap');
  @font-face {
    font-family: 'Verona';
    src: url('public/fonts/verona_serial-regular.otf'); 
  }

  @font-face {
    font-family: 'Tommy';
    src: url('public/fonts/MADE TOMMY Regular_PERSONAL USE.otf'); 
  }

  nav {
    display: flex;
    flex-direction: row;
    width: 15vw;
    /* margin: 1rem; */
    margin:0px;
    margin-right: 30px;
    /* padding-left: -0.5rem; */

    justify-content: center;
    justify-items: center;
  }

  ul {
    list-style-type: none;
    margin: 0px;
    padding:0px;
  }

  h2 {
    text-decoration: none;
    font-size: 1.75em;
    margin: 0px;
  }

  p {
    margin-block-start: 0.01m;
    margin-block: 0.01em;
  }

  h1 {
      font-size: 3rem;
  }

  .nav-groups {
    
    font-family: 'Verona';

    padding: 2rem 0;
    overflow-x: visible;
    overflow-y: auto;
    font-size: 1em;
    padding:10px;

    width: 100%;
    height: 90vh;
    /* margin: 1rem; */
    border:5px dotted black;
    box-shadow: 0.4rem 0.4rem 0 0 black;
    background-color: rgb(255, 240, 225, 0.7);
    -webkit-backdrop-filter: blur(6px);;
    backdrop-filter: blur(6px);

    /* position:fixed; */
  }

  .nav-groups ul, .nav-groups h2 {
    font-family: "Tommy";
  }

  .nav-groups > li + li {
    margin-top: 2rem;
    text-decoration: none;
  }

  .nav-groups > :first-child {
    padding-top: var(--doc-padding);
  }

  .nav-groups > :last-child {
    padding-bottom: 3rem;
    margin-bottom: var(--theme-navbar-height);
  }

  .nav-group-title {
    font-size: 3rem;
    font-weight: 700;
    padding: 0.1rem 1rem;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  .nav-link a {
    font-size: 1rem;
    margin: 1px;
    border-left: 4px solid transparent;
    padding: 0.3rem 1rem;
    color: inherit;
    text-decoration: none;
    display: block;
  }

  .nav-link a:hover,
  .nav-link a:focus {
    border-left: 4px solid var(--color-blue-light);
    background-color: var(--color-blue-xlight);
  }

  .nav-link a[aria-current="page"] {
    border-left: 4px solid var(--color-blue-dark);
    background-color: var(--color-blue-light);
    font-weight: 700;
  }

  @media (max-width: 50%) {
    .nav-groups {
      padding: 0;
    }
  }

</style>

<style is:global>
  :root.theme-dark .nav-link a[aria-current="page"] {
    color: hsla(var(--color-base-white), 100%, 1);
  }
</style>
