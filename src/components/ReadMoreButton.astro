---
import { Icon } from 'astro-icon'
---

<div class="button">
    <h1> Read More </h1>
    <Icon name="ph:caret-right-duotone" />
</div>

<style> 
    @import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap');

    .button {
        background-color: #1b80cd;
        height: 4rem;
        width: 13.5rem;
        display: flex;
        box-shadow: 0.15rem 0.15rem 5px rgb(5, 78, 118);
        border-radius: 0.5rem;
        margin-left: auto;
        margin-right: 0;
        align-items: center;
    }

   .button h1 {
        color: white;
        font-weight: 800;
		font-size: 1.8rem;
        stroke: black; 
        stroke-width: 0.125rem;
        font-family: "Lato", sans-serif;  
        margin-left: 1.6rem;
    }

    .button:hover {
        background-color: rgb(12, 74, 140);
        box-shadow: 0.15rem 0.15rem 5px rgb(5, 78, 118);
    }

    [astro-icon] {
		color: white;
		height: 2rem;
        margin-left: 0.1rem;
        margin-right: 0;
	}
</style>