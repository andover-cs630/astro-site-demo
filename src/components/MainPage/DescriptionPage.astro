---
import Stacks from "./Stacks.astro";
---

<body>
    <div class="descriptionPage">
        <div class="descriptionText">
            <h1> Thorough, Well-Researched, </h1>
            <h1> In-Depth Lessons </h1>
            <div class="descriptionText">
                <h4> a comprehensive guide to data structures and algorithms</h4>
                <h4> supporting all learning styles -- visual, auditory, hands-on </h4>
                <h4> created for students, by students  </h4>
            </div>
        </div>
        <div class="examplePost">
            <Stacks />
        </div>
        <div class="starShapes">
            <img class="starLeft" src="/images/starShape.svg" aria-hidden="true">
            <div class="crop" >
                <img class="starRight" src="/images/starShape.svg" aria-hidden="true">
            </div>
        </div>
    </div>
</body>

<style>
    .descriptionPage {
        font-family: "Lato";
        margin-top: 3rem;
        margin-left: 1rem;
        display: grid;

        max-width:100%;
        overflow-x: hidden;
        overflow-y: visible;
        z-index: 10;


    }

    .descriptionText {
        grid-column: 1;
        grid-row: 1;
        width: 98%;
    }

    .descriptionPage h1 {
        color: #5CC6FF;
        /* drop-shadow(30px 10px 4px); */
        font-size: min(7.3vw, 5rem);
        max-width: 100%;
        white-space: nowrap;
        overflow: hidden;

        margin: 0;
        font-weight: 900;
    }

    .descriptionText h4 {
        display: flex;
        font-family: 'Lato', sans-serif;
        font-size: min(7.3vw, 2.5rem);
        font-weight: 300;

        margin: 35px;
        width: 50%;
        
    }

    .examplePost {
        grid-column: 1;
        grid-row: 1;
        margin-right: 3rem;
        margin-bottom: 3rem;
        margin-left: auto;
        margin-top: auto;
    }

    .starShapes {
        grid-column: 1;
        grid-row: 1;
        height: 80vh;
        display: flex;
        width: 100%;
    }

    .starLeft {
        margin-bottom: -2rem;
        margin-top: auto;
        width: 150px;
        margin-left: 35rem;
    }

    .starRight {
        width: 200px;   
        margin-right: -1rem;
        margin-left: auto;
        margin-top: -1rem;
        margin-bottom: auto;     
    }

    .crop {
        width: calc(200px - 1rem);
        overflow: hidden;
        margin-right: 0rem;
        margin-left: auto;
    }

    @media only screen and (max-width: 1000px) {
        .examplePost, .starShapes {
            display: none;
        }

        .descriptionText h4 {
            margin: 20px;
            width: 90%;
        }
    }
</style>
