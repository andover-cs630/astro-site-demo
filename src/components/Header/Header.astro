---
import Logo from "./Logo.astro";
---

<header>
	<nav class="nav-wrapper">
		<div class="logo">
			<a href="/">
				<Logo />
				<h1>PA DSA</h1>
			</a>
		</div>
		<div class="navigation">
			<div class="dropdowns">
				<a href="/articles">
					Lessons
				</a>
				<a href="/about">
					About
				</a>
			</div>
		</div>
	</nav>
</header>

<style>
	header {
		background-color: #0077b8;
		box-shadow: 0 0.125rem 0 0 black;

		align-items: center;
		display: flex;
		position: sticky;
		width: 100vw;
		height: 4rem;
		top: 0;
		z-index: 10;

		padding: 0px;
		margin: 0;
	}

	.nav-wrapper {
		display: flex;
		align-items: center;
		height: 4rem;
		width: 100vw;
	}

	.logo a {
		margin-left: 1em;
		border-radius: 0.25em;
		display: flex;
		gap: 0.5rem;
		color: white;
		text-decoration: none;
		align-items: center;
		text-shadow: 0 0.25rem 0.25rem rgba(0, 0, 0, 0.25);
		padding-inline: 0.7rem;
	}

	.logo h1 {
		font-family: "Lato", sans-serif;
		font-weight: 900;
		font-size: 1.5rem;
		margin: 0;
	}

	.navigation {
		display: grid;
		align-items: center;
		width:60%;
		/* margin-left: auto;
		margin-right: 0; */
	}

	.dropdowns a {
		margin: 0.5em;
		border-radius: 0.25em;
		padding: 0.5em 1em;
		text-decoration: none;
		color: white;
		font-weight: 700;
		font-family: "Lato", sans-serif;
	}

	a:hover, a:focus {
		background: #005D8F;
	}

	.dropdowns {
		display: flex;
		align-items: center;
		margin: 0;
		grid-row: 1;
		grid-column: 1;
	}

	.dropdowns h1 {
		color: white;
		font-family: "Lato", sans-serif;
		font-weight: 600;
		font-size: min(5vw, 1.25rem);
		margin: 0;
	}
</style>
