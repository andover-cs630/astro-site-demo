---
import Logo from "./Logo.astro";
import Dropdown from "./Dropdown.astro";
---

<header>
	<nav class="nav-wrapper">
		<div class="logo">
			<a href="/">
				<Logo />
				<h1>PA DSA</h1>
			</a>
		</div>
		<div class="navigation">
			<div class="dropdowns">
				<div class="lesson-dropdown" tabindex="0">
					<div class="lessons">
						<h1>Lessons</h1>
					</div>
					<div class="dropdown">
						<Dropdown/>
					</div>
				</div>
				<a href="/articles/introduction">
					<div class="about">
						<h1>About</h1>
					</div>
				</a>
			</div>
		</div>
	</nav>
</header>

<style>

    @import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap');

	header {
		background-color: #0077b8;
		box-shadow: 0 0.125rem 0 0 black;

		align-items: center;
		display: flex;
		position: sticky;
		width: 100vw;
		height: 4rem;
		top: 0;
		z-index: 10;

		padding: 0px;
		margin: 0;
	}

	.nav-wrapper {
		display: flex;
		align-items: center;
		height: 4rem;
		width: 100vw;
	}

	.logo a {
		display: flex;
		gap: 0.5rem;
		color: white;
		text-decoration: none;
		align-items: center;
		text-shadow: 0 0.25rem 0.25rem rgba(0, 0, 0, 0.25);
		padding-inline: 0.7rem;
	}

	.logo h1 {
		font-family: "Lato", sans-serif;
		font-weight: 900;
		font-size: 1.5rem;
		margin: 0;
	}

	.navigation {
		display: grid;
		align-items: center;
		width:60%;
		/* margin-left: auto;
		margin-right: 0; */
	}

	.lessons,
	.about {
		display: flex;
		padding-inline: 1rem;
		height: 4rem;
		align-items: center;
	}

	.dropdowns a {
		text-decoration: none;
		color: white;
		font-weight: 700;
	}

	.lessons:hover,
	.about:hover, .lessons:focus, .about:focus {
		background: #005D8F;
	}

	.dropdown {
		display: none;
	}

	.lesson-dropdown:hover > .dropdown, .lesson-dropdown:focus > .dropdown {
		display: block;
		animation-name: fade;	
		animation-duration: 1ms;
	}

	.dropdowns {
		display: flex;
		align-items: center;
		margin: 0;
		grid-row: 1;
		grid-column: 1;
	}

	.dropdowns h1 {
		color: white;
		font-family: "Lato", sans-serif;
		font-weight: 600;
		font-size: min(5vw, 1.25rem);
		margin: 0;
	}
</style>
